<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.3">

        <EditText
            android:text="TitreTicket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/titleDetailHistoriqueModif"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_weight="1"
            android:maxLines="1"
            android:gravity="top|center_vertical" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.2">

        <TextView
            android:text="Montant :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titreMontant"
            android:textSize="24sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <EditText
            android:text="50€"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/montantEditDetailHistorique"
            android:textSize="24sp"
            android:layout_marginStart="12dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.3">

        <TextView
            android:text="Date : 12 Décembre 2016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateDetailHistorique"
            android:textSize="24sp"
            android:layout_below="@+id/titleDetailHistoriqueModif"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.2">

        <Button
            android:text="Modifier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/butttonValiderModification"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_green_light"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>