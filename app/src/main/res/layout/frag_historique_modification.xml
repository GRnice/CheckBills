<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Modifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/butttonValiderModification"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_light" />

    <TextView
        android:text="Date : 12 Décembre 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateDetailHistorique"
        android:textSize="24sp"
        android:layout_below="@+id/titleDetailHistoriqueModif"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="47dp" />

    <ImageButton
        app:srcCompat="@android:color/darker_gray"
        android:id="@+id/imageTicketDetailModif"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:text="TitreTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleDetailHistoriqueModif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="Montant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titreMontant"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/montantEditDetailHistorique"
        android:layout_alignBottom="@+id/montantEditDetailHistorique"
        android:layout_toStartOf="@+id/dateDetailHistorique" />

    <EditText
        android:text="50€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/montantEditDetailHistorique"
        android:textSize="18sp"
        android:layout_above="@+id/imageTicketDetailModif"
        android:layout_toEndOf="@+id/titreMontant"
        android:layout_marginStart="17dp" />

</RelativeLayout>